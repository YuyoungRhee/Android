<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/address_item_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/location_on_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/address_item_iv"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/address_item_iv"
        android:orientation="vertical">
        <TextView
            android:id="@+id/address_item_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건물명"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address_item_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 도로명 주소"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>