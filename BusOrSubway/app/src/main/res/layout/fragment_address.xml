<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddressFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/address_search"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/address_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:iconifiedByDefault="false" />
    <ImageView
        android:id="@+id/address_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/address_search"
        app:layout_constraintBottom_toBottomOf="@id/address_search"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/btn_arrow_black" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/address_item_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/address_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>