<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PathFinderFragment">

    <TextView
        android:id="@+id/departure_tv"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="출발지 입력"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/arrival_tv"
        android:gravity="center_vertical"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/departure_tv"
        app:layout_constraintTop_toBottomOf="@id/departure_tv"
        app:layout_constraintEnd_toEndOf="@id/departure_tv"
        android:hint="도착지 입력"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>