<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/second_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 추가하기"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/second_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력해주세요"
        app:layout_constraintTop_toBottomOf="@id/second_title_tv"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/second_number_et"
        android:hint="전화번호를 입력해주세요."
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second_name_et" />
    <Button
        android:id="@+id/end_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second_number_et"
        android:layout_marginTop="50dp"
        android:text="완료"/>

</androidx.constraintlayout.widget.ConstraintLayout>